{% extends 'base.html.twig' %}

{% block title %}SpaceShip{% endblock %}

{% block body %}
    <h1>SpaceShip "{{ space_ship.name }}"</h1>
    <a href="{{ path('app_space_ship_index') }}">Back to list</a>

    <a href="{{ path('app_space_ship_edit', {'id': space_ship.id}) }}">Edit</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ space_ship.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ space_ship.name }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ space_ship.color }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ space_ship.size }}</td>
            </tr>
            <tr>
                <th>CrewCapacity</th>
                <td>{{ space_ship.crewCapacity }}</td>
            </tr>
            <tr>
                <th>MaxSpeed</th>
                <td>{{ space_ship.maxSpeed }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ space_ship.description ? space_ship.description|join(', ') : 'n/a' }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ space_ship.category ? space_ship.category : 'n/a' }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ space_ship.tags ? space_ship.tags|join(', ') : 'n/a' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ space_ship.image ? space_ship.image : 'n/a' }}</td>
            </tr>
            <tr>
                <th>User</th>
                {% for user in space_ship.user %}    
                <td>{{ user.id }}</td>
                {% endfor %}
            </tr>

        </tbody>
    </table>

    {{ include('space_ship/_delete_form.html.twig') }}
{% endblock %}
